extends ../ui-kit-template/ui-kit-template

include ../../components/block-subtitle/block-subtitle
include ../../components/block-title/block-title
include ../../components/bullet-list/bullet-list
include ../../components/button/button
include ../../components/checkbox/checkbox
include ../../components/checkbox-expandable-list/checkbox-expandable-list
include ../../components/checkbox-list/checkbox-list
include ../../components/benefits/benefits
include ../../components/datepicker/datepicker
include ../../components/dropdown/dropdown
include ../../components/feedback/feedback
include ../../components/filter-date-dropdown/filter-date-dropdown
include ../../components/like-button/like-button
include ../../components/masked-text-field/masked-text-field    
include ../../components/pagination/pagination
include ../../components/radio-button/radio-button
include ../../components/range-slider/range-slider
include ../../components/rate-button/rate-button
include ../../components/rich-checkbox/rich-checkbox
include ../../components/subscription-text-field/subscription-text-field
include ../../components/text-field/text-field
include ../../components/toggle/toggle

block headBlock
    title Form Elements              
block content
    -const feedbackA = ['Мурад Сарафанов','./img/sarafanov.png', '5 дней назад', [3,11], 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.']
    .form-elements
        .form-elements__area-a     
            .form-elements__text-field
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('text field')
                    +block-subtitle('default')
                .text-field__input-container
                    +text-field ('','email', 'Email')
            .form-elements__text-field.form-elements__text-field-2
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('text field')
                    +block-subtitle('hover / focus')
                .text-field__input-container
                    +text-field ('This is pretty awesome','email', 'Email')
            .form-elements__dropdown
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('dropdown')
                +dropdown(1, '')
            .form-elements__masked-text-field
                div(class='form-elements__titles-container' style= {margin: '0 0 5.5px 0'})
                    +block-title('masked text field')
                +masked-text-field ('','masked-text-field', 'ДД.ММ.ГГГГ')
            .form-elements__date-dropdowns 
                +datepicker()
            .form-elements__filter-date-dropdown
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('filter date dropdown')
                +filter-date-dropdown
            .form-elements__subscription-text-field
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('subscription text field')
                +subscription-text-field ('','email', 'Email')
            .form-elements__room-dropdown 
                .form-elements-titles-container_266
                    +block-title('dropdown')
                    +block-subtitle('default')
                +dropdown(2, '_room', 'narrow')
            .form-elements__room-dropdown  
                .form-elements-titles-container_266
                    +block-title('dropdown')
                    +block-subtitle('expanded')
                +dropdown(3, '_room', 'narrow') 
            .form-elements__expandable-checkbox-list
                +checkbox-expandable-list('EXPANDABLE CHECKBOX LIST')
            .form-elements__expandable-checkbox-list-2
                +checkbox-expandable-list('EXPANDABLE CHECKBOX LIST')
            .form-elements__benefits
                +benefits('benefits-emotion.svg','Комфорт', 'Шумопоглощающие стены')
                +benefits('benefits-location.svg','Удобство', 'Окно в каждой из спален')
        .form-elements__area-b
            .form-elements__checkbox-list
                +checkbox-list('checkbox buttons')
            .form-elements__radio-button  
                div(class='form-elements__titles-container' style= {margin: '0 0 12px 0'})
                    +block-title('radio buttons')
                +radio-button()
            .form-elements__toggle 
                div(class='form-elements__titles-container' style= {margin: '0 0 12px 0'})
                    +block-title('toggle')
                +toggle('Получать спецпредложения')
                +toggle('Получать спецпредложения')
            .form-elements__like-button
                div(class='form-elements__titles-container' style= {margin: '0 0 15px 0'})
                    +block-title('like button')
                .form-elements__like-button-container
                    +like-button(1, 2)
                    +like-button(2, 11)
            .form-elements__rate-button 
                div(class='form-elements__titles-container' style= {margin: '0 0 17px 0'})
                    +block-title('rate button')
                .form-elements__rate-buttons-container 
                    +rate-button(4)
                    +rate-button(5)
            .form-elements__dropdowns-2
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('dropdown')
                +dropdown(4, '')
            .form-elements__rich-checkbox
                div(class='form-elements__titles-container' style= {margin: '0 0 15px 0'})
                    +block-title('rich checkbox buttons')
                +rich-checkbox()
        .form-elements__area-d
            .form-elements__feedback
                +feedback(...feedbackA)
        .form-elements__area-c
            .form-elements__range-slider 
                div(class='form-elements__titles-container' style= {margin: '0 0 23px 0', width: '266px'})
                    +block-title('rangle slider')
                    div(class='block-subtitle' id='range-slider__text') 5000₽ - 10000₽
                +range-slider
            .form-elements__buttons
                div(class='form-elements__titles-container' style= {margin: '0 0 16px 0'})
                    +block-title('BUTTONS')
                .form-elements__buttons-container
                    .form-elements__button-container                    
                        +button('purple', 'click me')
                    .form-elements__button-container                    
                        +button('purple', 'click me')
                    .form-elements__button-container                    
                        +button('white', 'click me')
                    .form-elements__button-container                    
                        +button('white', 'click me')
                    
                .form-elements__buttons-container-2
                    +button('link', 'click me')
                    +button('link', 'click me')
                +button('with-arrow', 'перейти к оплате')
            .form-elements__pagination
                div(class='form-elements__titles-container' style= {margin: '0 0 16px 0'})
                    +block-title('pagination')
                +pagination()
            .form-elements__dropdowns-3
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('dropdown')
                +dropdown(5, '')
            .form-elements__bullet-list 
                div(class='form-elements__titles-container' style= {margin: '0 0 5px 0'})
                    +block-title('bullet list')
                +bullet-list()