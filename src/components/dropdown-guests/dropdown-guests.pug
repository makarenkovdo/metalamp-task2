mixin dropdown-guests
      .dropdown-guests.js-dropdown-guests
        .dropdown__button.js-dropdown__button
          span.dropdown__text.js-dropdown__text Сколько гостей
          span.dropdown__img-box.js-dropdown__img-box
            img(src='./img/dropdown-guests.svg' alt='some some' width='13' height='8')
      .dropdown__popup.js-dropdown__popup.hide
        span.dropdown__option-text.js-dropdown__option-text Взрослые
        span.dropdown__decrease.js-dropdown__decrease1
          img(src='./img/minus.svg' alt='some some' width='13' height='8')
        span.dropdown__counter.js-dropdown__counter1 0
        span.dropdown__increase.js-dropdown__increase1
          img(src='./img/plus.svg' alt='some some' width='13' height='8')
        span.dropdown__option-text.js-dropdown__option-text Дети
        span.dropdown__decrease.js-dropdown__decrease2
          img(src='./img/minus.svg' alt='some some' width='13' height='8')
        span.dropdown__counter.js-dropdown__counter2 0
        span.dropdown__increase.js-dropdown__increase2
          img(src='./img/plus.svg' alt='some some' width='13' height='8')
        span.dropdown__option-text.js-dropdown__option-text Младенцы
