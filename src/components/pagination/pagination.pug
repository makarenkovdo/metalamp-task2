mixin pagination() 
    .pagination-container
        .pagination__page-numbers
            span(class="active-page")
            span(class="non-active-page") 2
            span(class="non-active-page") 3
            span(class="non-active-page") ...
            span(class="non-active-page") 15
            img.emotion-icon(src='./img/pagination-arrow.svg' alt='next pages' width='48' height='48')           
        .pagination__caption  1 – 12 из 100+ вариантов аренды 